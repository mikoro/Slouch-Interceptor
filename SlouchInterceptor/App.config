<?xml version="1.0" encoding="utf-8"?>

<configuration>

  <configSections>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="Mironworks.SlouchInterceptor.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <userSettings>
    <Mironworks.SlouchInterceptor.Properties.Settings>
      <setting name="BreakInterval" serializeAs="String">
        <value>45</value>
      </setting>
      <setting name="BreakDuration" serializeAs="String">
        <value>180</value>
      </setting>
      <setting name="IdleThreshold" serializeAs="String">
        <value>5</value>
      </setting>
      <setting name="FirstRun" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="ImagePath" serializeAs="String">
        <value>Images\SlouchInterceptor.png</value>
      </setting>
      <setting name="ShowImage" serializeAs="String">
        <value>True</value>
      </setting>
    </Mironworks.SlouchInterceptor.Properties.Settings>
  </userSettings>

  <log4net>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="${LOCALAPPDATA}\Mironworks\Slouch Interceptor\SlouchInterceptor.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maximumFileSize value="4MB" />
      <maxSizeRollBackups value="1" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{ISO8601} %-5level - %message (%logger [%thread])%newline" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingFile" />
    </root>
  </log4net>

  <system.diagnostics>
    <trace>
      <listeners>
        <add name="CustomTraceListener" type="Mironworks.SlouchInterceptor.CustomTraceListener, Slouch Interceptor" />
      </listeners>
    </trace>
  </system.diagnostics>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <probing privatePath="Libraries" />
    </assemblyBinding>
  </runtime>

</configuration>